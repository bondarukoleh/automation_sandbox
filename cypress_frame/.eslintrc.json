{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "google",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:cypress/recommended"
    ],
    "env": {
        "commonjs": true,
        "es6": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "indent": ["warn", 2],
        "max-len": ["error", 120],
        "quotes": ["off", "single", { "allowTemplateLiterals": true }],
        "spaced-comment": "off",
        "linebreak-style": "off",
        "comma-dangle": "warn",
        "space-before-function-paren": ["error", "never"],
        "arrow-parens": "off",
        "space-infix-ops": "off",
        "keyword-spacing": "off",
        "no-invalid-this": "off",
        "require-jsdoc": "off",
        "new-cap": "off",
        "valid-jsdoc": "off",
        "@typescript-eslint/no-var-requires": "off",
        "@typescript-eslint/no-namespace": "off",
        "cypress/no-unnecessary-waiting": "off",
        "@typescript-eslint/no-empty-function": "off"
    }
}
