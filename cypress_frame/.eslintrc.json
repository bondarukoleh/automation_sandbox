{
    "env": {
        "commonjs": true,
        "es6": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "indent": ["warn", 2],
        "max-len": ["error", 120],
        "quotes": ["off", "single", { "allowTemplateLiterals": true }],
        "spaced-comment": "off",
        "linebreak-style": ["warn", "unix"],
        "comma-dangle": "warn",
        "space-before-function-paren": ["error", "never"],
        "arrow-parens": "off",
        "space-infix-ops": "off",
        "keyword-spacing": "off",
        "no-invalid-this": "off",
        "require-jsdoc": "off",
        "new-cap": "off",
        "valid-jsdoc": "off"
    }
}
